@page
@model app.razor.WebApp.Pages.EventPlan.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this event and everyone invited?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentEventPlan.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentEventPlan.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentEventPlan.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentEventPlan.Description)
        </dd>
  
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CurrentEventPlan.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-page="Index" role="button"> Cancel</a>

    </form>
</div>
