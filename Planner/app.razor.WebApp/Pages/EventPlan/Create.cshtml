@page
@model app.razor.WebApp.Pages.EventPlan.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 >Create</h1>

<h4>EventPlan</h4>
<hr />
<div class="row text-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventPlan.EventTypeID" class="control-label">Type of Event</label>
                <select asp-for="EventPlan.EventTypeID" class ="form-control" asp-items="ViewBag.EventTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventPlan.Title" class="control-label"></label>
                <input asp-for="EventPlan.Title" class="form-control" />
                <span asp-validation-for="EventPlan.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventPlan.Description" class="control-label"></label>
                <input asp-for="EventPlan.Description" class="form-control" />
                <span asp-validation-for="EventPlan.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index" role="button"> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
